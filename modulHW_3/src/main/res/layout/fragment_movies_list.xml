<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_frg_bg">

    <LinearLayout
        android:id="@+id/top_menu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_4x"
            android:src="@drawable/list_frg_shape"
            tools:ignore="ContentDescription" />

        <TextView
            style="@style/style_roboto_normal_900"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_2x"
            android:text="@string/movies_list"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="@color/app_grey_bg"
            app:layout_constraintCircleRadius="@dimen/space_2x"
            android:layout_marginStart="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/image_film"
            android:src="@drawable/list_grey_bg"
            tools:ignore="ContentDescription,UnusedAttribute" />

        <ImageView
            android:id="@+id/image_film"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5x"
            app:layout_constraintTop_toBottomOf="@id/top_menu"
            android:background="@drawable/shape_image"
            android:layout_marginStart="@dimen/space_3.5x"
            app:layout_constraintStart_toStartOf="parent"
            android:foreground="@drawable/list_frg_mask"
            android:src="@drawable/list_frg_movie"
            tools:ignore="ContentDescription,UnusedAttribute" />

    <TextView
        android:id="@+id/age_category"
        style="@style/style_roboto_normal_900"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_1.5x"
        android:layout_marginTop="@dimen/space_3x"
        android:background="@drawable/shape_image"
        android:text="@string/str_age_category"
        android:textColor="@color/app_white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/image_film"
        app:layout_constraintTop_toTopOf="@+id/image_film"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/movie_genre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/str_movie_genre"
        android:textColor="@color/app_assent"
        android:layout_marginBottom="@dimen/space_1x"
        android:textSize="10sp"
        style="@style/style_roboto_normal_300"
        app:layout_constraintBottom_toTopOf="@+id/star_level_1"
        app:layout_constraintStart_toStartOf="@+id/star_level_1"
        tools:ignore="SmallSp" />

    <ImageView
        android:id="@+id/star_level_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_1x"
        android:src="@drawable/star_icon_on"
        android:layout_marginBottom="@dimen/space_2x"
        app:layout_constraintStart_toStartOf="@id/image_film"
        app:layout_constraintBottom_toBottomOf="@id/image_film"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/star_level_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_1x"
        android:src="@drawable/star_icon_on"
        app:layout_constraintStart_toEndOf="@id/star_level_1"
        app:layout_constraintTop_toTopOf="@+id/star_level_1"
        app:layout_constraintBottom_toBottomOf="@+id/star_level_1"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/star_level_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_1x"
        android:src="@drawable/star_icon_on"
        app:layout_constraintStart_toEndOf="@id/star_level_2"
        app:layout_constraintTop_toTopOf="@+id/star_level_1"
        app:layout_constraintBottom_toBottomOf="@+id/star_level_1"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/star_level_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_1x"
        android:src="@drawable/star_icon_on"
        app:layout_constraintStart_toEndOf="@id/star_level_3"
        app:layout_constraintTop_toTopOf="@+id/star_level_1"
        app:layout_constraintBottom_toBottomOf="@+id/star_level_1"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/star_level_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_1x"
        android:src="@drawable/star_icon_off"
        app:layout_constraintStart_toEndOf="@id/star_level_4"
        app:layout_constraintTop_toTopOf="@+id/star_level_1"
        app:layout_constraintBottom_toBottomOf="@+id/star_level_1"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/reviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_reviews"
        style="@style/style_roboto_normal_900"
        android:textAllCaps="true"
        android:layout_marginStart="@dimen/space_1x"
        android:textColor="@color/app_grey"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/star_level_1"
        app:layout_constraintStart_toEndOf="@id/star_level_5"
        app:layout_constraintTop_toTopOf="@id/star_level_1"
        tools:ignore="SmallSp" />
    
    <TextView
        android:id="@+id/film_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_1x"
        android:layout_marginTop="@dimen/space_2x"
        android:fontFamily="@font/roboto"
        android:text="@string/str_film_name"
        android:textColor="@color/app_white"
        android:textSize="14sp"
        style="@style/style_roboto_normal_900"
        app:layout_constraintTop_toBottomOf="@+id/image_film"
        app:layout_constraintStart_toStartOf="@+id/image_film"
        tools:targetApi="p" />

    <TextView
        android:textColor="@color/app_text_grey"
        style="@style/style_roboto_normal_900"
        android:text="@string/film_duration"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/film_name"
        app:layout_constraintTop_toBottomOf="@id/film_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/icon_like"
        app:layout_constraintEnd_toEndOf="@id/image_film"
        app:layout_constraintTop_toTopOf="@+id/image_film"
        android:layout_marginTop="@dimen/space_3x"
        android:layout_marginEnd="@dimen/space_2x"
        android:src="@drawable/icon_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>