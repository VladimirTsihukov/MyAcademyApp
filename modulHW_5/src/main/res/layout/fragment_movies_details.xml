<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_black">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/ic_mask_back"
        android:src="@drawable/ic_background_mask"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,UnusedAttribute" />


    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrierBottomMask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="mask" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_4x"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_path"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_back"
        style="@style/style_text_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_2x"
        android:text="@string/back"
        android:textColor="@color/app_grey"
        app:layout_constraintBottom_toBottomOf="@id/path"
        app:layout_constraintStart_toEndOf="@id/path"
        app:layout_constraintTop_toTopOf="@id/path" />

    <TextView
        android:id="@+id/mov_list_film_name"
        style="@style/style_roboto_normal_900"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_4x"
        android:fontFamily="@font/roboto"
        android:text="@string/str_film_name"
        android:textColor="@color/app_white"
        android:textSize="38sp"
        app:layout_constraintBottom_toBottomOf="@id/barrierBottomMask"
        app:layout_constraintEnd_toStartOf="@id/guidLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/barrierBottomMask"
        tools:targetApi="p" />

    <TextView
        android:id="@+id/mov_list_age_category"
        style="@style/style_roboto_normal_900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_3x"
        android:text="@string/str_age_category"
        android:textColor="@color/app_white"
        android:textSize="@dimen/space_3x"
        app:layout_constraintBottom_toTopOf="@id/mov_list_film_name"
        app:layout_constraintStart_toStartOf="@id/mov_list_film_name"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/mov_list_movie_genre"
        style="@style/style_text_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/str_movie_genre"
        android:textColor="@color/app_assent"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/guidLine"
        app:layout_constraintStart_toStartOf="@id/mov_list_film_name"
        app:layout_constraintTop_toBottomOf="@id/mov_list_film_name" />

    <ImageView
        android:id="@+id/mov_list_star_level_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_1x"
        android:src="@drawable/ic_star_off"
        app:layout_constraintStart_toStartOf="@id/mov_list_film_name"
        app:layout_constraintTop_toBottomOf="@id/mov_list_movie_genre"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/mov_list_star_level_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_1x"
        android:src="@drawable/ic_star_off"
        app:layout_constraintStart_toEndOf="@id/mov_list_star_level_1"
        app:layout_constraintTop_toBottomOf="@id/mov_list_movie_genre"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/mov_list_star_level_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_1x"
        android:src="@drawable/ic_star_off"
        app:layout_constraintStart_toEndOf="@id/mov_list_star_level_2"
        app:layout_constraintTop_toBottomOf="@id/mov_list_movie_genre"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/mov_list_star_level_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_1x"
        android:src="@drawable/ic_star_off"
        app:layout_constraintStart_toEndOf="@id/mov_list_star_level_3"
        app:layout_constraintTop_toBottomOf="@id/mov_list_movie_genre"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/mov_list_star_level_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_1x"
        android:src="@drawable/ic_star_off"
        app:layout_constraintStart_toEndOf="@id/mov_list_star_level_4"
        app:layout_constraintTop_toBottomOf="@id/mov_list_movie_genre"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/mov_list_reviews"
        style="@style/style_roboto_normal_900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_reviews"
        android:textAllCaps="true"
        android:textColor="@color/app_grey"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/mov_list_star_level_1"
        app:layout_constraintEnd_toStartOf="@id/guidLine"
        app:layout_constraintStart_toEndOf="@id/mov_list_star_level_5"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/mov_list_star_level_1" />

    <TextView
        android:id="@+id/mov_list_story_line"
        style="@style/style_roboto_normal_900"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_6x"
        android:text="@string/str_story_line"
        android:textColor="@color/app_white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/mov_list_film_name"
        app:layout_constraintTop_toBottomOf="@id/mov_list_star_level_1" />

    <TextView
        android:id="@+id/mov_list_text_story_line"
        style="@style/style_text_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_4x"
        android:layout_marginTop="@dimen/space_1x"
        android:layout_marginEnd="@dimen/space_4x"
        android:text="@string/str_text_story_line"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mov_list_story_line" />

    <TextView
        android:id="@+id/cast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_4x"
        android:layout_marginTop="@dimen/space_6x"
        android:text="@string/str_cast"
        android:textColor="@color/app_white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mov_list_text_story_line" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_actors"
        android:layout_marginTop="@dimen/space_2x"
        app:layout_constraintTop_toBottomOf="@id/cast"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        tools:listitem="@layout/view_holder_actor"
        android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>